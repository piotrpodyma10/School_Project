
@model IEnumerable<School_Project.Models.Grades>
@{
    Layout = "~/View/Main_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wystawianie ocen</title>

    <style>
        body {
            background-image: url("../../Contents/img/77.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-color: #999;
            margin-left: 0px;
            margin-right: 0px;
            margin-top: 15px;
            color:white;
        }

        input {
            /*display:none;*/
            width: inherit;
            height: inherit;
            
            margin: 0px;
            -webkit-appearance: textarea;
            cursor: pointer;
            
        }

        label {
            
            position: absolute;
            margin-left: auto;
            margin-right: auto;
            top: 50%; /* position the top  edge of the element at the middle of the parent */
            left: 50%; /* position the left edge of the element at the middle of the parent */
            transform: translate(-50%, -50%);
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
        }

      .input-check:checked + .label-check{
          color:white;
          
      }

      



            input[type='radio']:before {
                content: '';
                display: block;
                width:inherit;
                height: inherit;
               
               
            }

            input[type='radio']:checked:before {
                background: green;
                color:blue;
            }




        #Klasa {
            position: relative;
            text-align: center;
            width:100px; 
            height:60px; 
            background-color:white; 
            float:left;
            text-align: center;
            margin-right: 15px;
            color:black; 
            margin-top:15px;
        }

        #Klasa:hover {
            background-color:lawngreen;
        }


        input[type=submit] {
            width: 150px;
            background-color:saddlebrown;
            font-size: 20px;
            color: white;
            padding: 15px 10px;
            margin-top:15px;
            border: solid 2px white;
            
            cursor: pointer;
            letter-spacing: 2px;
            box-sizing: border-box;
            height:60px;           
            transition:1s;

            -webkit-box-shadow: 0px 0px 12px 2px rgba(0,0,0,0.75);
            -moz-box-shadow: 0px 0px 12px 2px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 12px 2px rgba(0,0,0,0.75);
        }


            input[type=submit]:focus {
                -webkit-box-shadow: 0px 0px 12px 4px rgba(0,0,0,0.75);
                -moz-box-shadow: 0px 0px 12px 4px rgba(0,0,0,0.75);
                box-shadow: 0px 0px 12px 4px rgba(0,0,0,0.75);
            }



            input[type=submit]:hover {
                background-color: green;
                transition:1s;
            }


    </style>
</head>
<body>
    <div>
       
        <form action="/Teacher/Class_Number" method="post">
            
            <br />
            Nauczany przedmiot: @Model.First().Przedmiot
            <br />
            Dostępne klasy: 
            <br />

            @foreach (var item in Model)
            {
                


                if (item.Nazwa_Klasy.Trim() == "I A")
                {
                        <div id="Klasa">
                            <input type="radio" class="input-check" name="ClassID_TeacherID" value="1 @Html.DisplayName(item.TeacherID.ToString())">
                            <label class="label-check">@Html.DisplayFor(modelItem => item.Nazwa_Klasy)</label>

                        </div>
                    }
                    else if (item.Nazwa_Klasy.Trim() == "I B")
                    {
                        <div id="Klasa">

                            <input type="radio" class="input-check" name="ClassID_TeacherID" value="2 @Html.DisplayName(item.TeacherID.ToString())">
                            <label class="label-check">@Html.DisplayFor(modelItem => item.Nazwa_Klasy)</label>
                        </div>
                    }
                    else if (item.Nazwa_Klasy.Trim() == "I C")
                    {
                        <div id="Klasa">

                            <input type="radio" class="input-check" name="ClassID_TeacherID" value="3 @Html.DisplayName(item.TeacherID.ToString())" id="idinput">
                            <label for="idinput" class="label-check">@Html.DisplayFor(modelItem => item.Nazwa_Klasy)</label>
                        </div>
                    }
                    else if (item.Nazwa_Klasy.Trim() == "I D")
                    {
                        <div id="Klasa">
                            <input type="radio" class="input-check" name="ClassID_TeacherID" value="4 @Html.DisplayName(item.TeacherID.ToString())" id="idinput">
                            <label for="idinput" class="label-check">@Html.DisplayFor(modelItem => item.Nazwa_Klasy)</label>
                        </div>
                    }
                    else
                    {
                        continue;
                    }
                }
                
               <input type="submit" value="Wybierz" />           
        </form>

        <br />

      

    </div>
    @ViewBag.Informacja

</body>
</html>
