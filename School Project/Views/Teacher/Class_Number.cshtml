@model IEnumerable<School_Project.Models.Grades>
@{
    Layout = "~/View/Main_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Wprowadzanie ocen</title>

    <style>
        body {
            background-image: url("../../Contents/img/77.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-color: #999;
            margin-left: 0px;
            margin-right: 0px;
            margin-top: 15px;
            color: white;
        }

        .Powrot {
            width: 120px;
            height: 50px;
            background-color: green;
            color: white;
            position: relative;
            line-height: 50px;
            transition: 1s;
            float:left;
        }

        .Powrot:hover {
            background-color:lawngreen;
            color:black;
            transition:1s;
            
        }



        input[type=submit] {
            width:100%;
            height:50px;
            color:white;
            transition:1s;
            background-color:green;
            font-weight:bold;
            font-size:16px;
            cursor:pointer;
            margin:0px;
            border:none;
            border-radius:0px 0px 22px 22px !important;

        }

    



        input[type=submit]:hover {
            background-color: lawngreen;
            color:black;
            transition:1s;
            font-weight:bold;
        }


        #icon-back {
            width: 60px;
            height: inherit;
            float: left;
            top:50%;
            left:10%;
            transform: translate(-10%,-50%);
            position:absolute;

        }

        .Powrot_text {
            width: 60px;
            height: inherit;
            float: left;
            position: absolute;
            top: 50%;
            left: 70%;
            transform: translate(-70%, -50%);
            font-size:18px;
            font-weight:bold;
        }

        .icon-left-big {
            
            width: 60px;
            height: inherit;
            float: left;
            top: 70%;
            left: 10%;
            transform: translate(-10%,-50%);
            position: absolute;
            
        }

     form {
         margin-bottom:0px !important;
     }


        #Box1 {
            float: left;
            background-color: rgba(197, 144, 0, 0.72);
            margin-top:25px;
            margin-left: 80px;
            width:auto;
            height:auto;
            padding:20px;
            font-weight:bold;
            font-size:20px;
           
            margin-bottom:15px;
            padding-top:10px;
            font-family:serif;
            border-radius:25px;
            text-align:center;
            border:solid 3px white;
        }


        #wiersze {
                        border: solid 3px white; 
            display: flex; 
            justify-content: center; 
             
            background-color:rgba(93, 63, 0, 0.72); 
            border-radius:25px;
            margin:auto;
            margin-top:10px;
            position:relative;
            width:auto;
            height:auto;

      
        }



    </style>


    </head > 

<body>



    <a href="/Teacher/Come_Back">
        <div class="Powrot">
            <i id="icon-back2" class="icon-left-big"></i>
            <div class="Powrot_text">Powrót</div>

        </div>
    </a>


   
    <div id="Box1"> Lista uczniów występujących w klasie
        <div id="wiersze">
            <form action="/Teacher/Save_Data" method="post">
                <table class="Uczniowie" cellpadding="10" style="align-items:center; text-align:center; align-self: center;">

                    @foreach (var elements in Model)
            {

                        <tr>
                            <td>
                                @Html.DisplayName(elements.Imie)
                            <input type="hidden" name="StudentID" value="@Html.DisplayName(elements.StudentID.ToString())">
                        </td>
                        <td>
                            @Html.DisplayName(elements.Nazwisko)
                    </td>
                    <td>
                        <select name="Uwagi">
                            <option value="X"> </option>
                            <option value="Sprawdzian">Sprawdzian</option>
                            <option value="Kartkówka">Kartkówka</option>
                            <option value="Odpowiedź">Odpowiedź</option>
                            <option value="Zadanie Domowe">Zadanie Domowe</option>
                            <option value="Test">Test</option>
                        </select>
                    </td>
                    <td>
                        <select name="Ocena">
                            <option value="X"> </option>
                            <option value="6.0">6.0</option>
                            <option value="5.5">5.5</option>
                            <option value="5.0">5.0</option>
                            <option value="4.5">4.5</option>
                            <option value="4.0">4.0</option>
                            <option value="3.5">3.5</option>
                            <option value="3.0">3.0</option>
                            <option value="2.5">2.5</option>
                            <option value="2.0">2.0</option>
                            <option value="1.5">1.5</option>
                            <option value="1.0">1.0</option>
                        </select>
                    </td>
                </tr>


                    }

                </table>
                <input type="hidden" name="TeacherID" value="@ViewBag.TeacherID" />

                <input type="submit" value="Zatwierdź" />
            </form>
        </div>
    </div>

</body>





 

    </html >
        